% Title page
\newcommand{\mytitle}{
  \begin{frame}[plain]
  \addtocounter{framenumber}{-1}
  \titlepage
  \end{frame}
}

% TOC slide
\newcommand{\mytoc}{
  {\framenoheader\framenonumber
    \begin{frame}[noframenumbering]{Outline}
    %\vspace{-3pt}
    \tableofcontents
    \end{frame}
  }
}

% Transition slide
\newcommand{\transition}{
  {\framenoheader\framenonumber
    \begin{frame}[noframenumbering]
      \tableofcontents[currentsection, hideallsubsections]
    \end{frame}
  }
}

\newcommand{\transitionsubsec}{
  {\framenoheader\framenonumber
    \begin{frame}[noframenumbering]
      \tableofcontents[currentsection]
    \end{frame}
  }
}

% References slide
\newcommand{\refslide}{
  {\framenoheader\framenonumber
    \begin{frame}[t,allowframebreaks,noframenumbering]{References}
    \printbibliography[heading=none]
    \end{frame}
  }
}

% End thank you slide
\newcommand{\thankyou}{
  {\framenonumber
    \begin{frame}[noframenumbering]{End}
    \begin{center}
    \Huge Thank you!
    \end{center}
    \blfootnote{Slides and source code are made available at: {\color{fu-red!70}\url{http://socialstats.haziqj.ml}}}
    \end{frame}
  }
}

% Backup slides counter
\newcommand{\beginbackup}{
   \newcounter{framenumbervorappendix}
   \setcounter{framenumbervorappendix}{\value{framenumber}}
}
\newcommand{\backupend}{
   \addtocounter{framenumbervorappendix}{-\value{framenumber}}
   \addtocounter{framenumber}{\value{framenumbervorappendix}} 
}


